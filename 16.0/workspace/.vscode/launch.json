{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo EE",
            "type": "debugpy",
            "request": "launch",
            "program": "/usr/bin/odoo-dev-bin",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                // "shell",
                "--exclude-addon-dirs=*template*",
                "--database=dev_ee",
                "--log-level=test",
                "--log-handler=odoo.tools.convert:DEBUG",
                "--config=${workspaceFolder}/.vscode/odoo.conf",
                "--dev=qweb,xml",
                "--load=base,web",
                // "--init=/",
                // "--test-enable",
                // "--test-tags=/",
                // "--stop-after-init",
                "--load-language=de_DE",
                // "--language=de_DE",
                // "--i18n-export=${workspaceFolder}/de.po",
                // "--modules=/"
            ]
        },
        {
            "name": "Odoo CE",
            "type": "debugpy",
            "request": "launch",
            "program": "/usr/bin/odoo-dev-bin",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                // "shell",
                "--exclude-addon-dirs=*enterprise*,*template*",
                "--database=dev_ce",
                "--log-level=test",
                "--log-handler=odoo.tools.convert:DEBUG",
                "--config=${workspaceFolder}/.vscode/odoo.conf",
                "--dev=qweb,xml",
                "--load=base,web",
                // "--init=/",
                // "--test-enable",
                // "--test-tags=/",
                // "--stop-after-init",
                "--load-language=de_DE",
                // "--language=de_DE",
                // "--i18n-export=${workspaceFolder}/de.po",
                // "--modules=/"
            ]
        },
    {
        "name": "Python: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": true
    }
    ]
}